{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "apps": {
            "type": "object",
            "properties": {
                "linkerd-control-plane": {
                    "id": "appSchema",
                    "type": "object",
                    "properties": {
                        "annotations": {
                            "type": "object"
                        },
                        "appName": {
                            "type": "string"
                        },
                        "catalog": {
                            "type": "string"
                        },
                        "chartName": {
                            "type": "string"
                        },
                        "dependsOn": {
                            "type": "string"
                        },
                        "enabled": {
                            "type": "boolean"
                        },
                        "extraConfigs": {
                            "type": "array"
                        },
                        "namespace": {
                            "type": "string"
                        },
                        "namespaceConfig": {
                            "type": "object"
                        },
                        "userConfig": {
                            "type": "object"
                        },
                        "version": {
                            "type": "string"
                        }
                    }
                },
                "linkerd-multicluster-link": {
                    "$ref": "appSchema"
                },
                "linkerd-multicluster": {
                    "$ref": "appSchema"
                },
                "linkerd-viz": {
                    "$ref": "appSchema"
                },
                "linkerd2-cni": {
                    "$ref": "appSchema"
                }
            }
        },
        "clusterID": {
            "type": "string"
        },
        "clusterValues": {
            "type": "boolean"
        },
        "organization": {
            "type": "string"
        }
    }
}
